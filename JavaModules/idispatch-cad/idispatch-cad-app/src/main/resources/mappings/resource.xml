<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd">

    <entity class="net.pkhapps.idispatch.cad.domain.model.resource.ResourceType" access="FIELD">
        <table name="resource_type" schema="cad"/>
        <attributes>
            <id name="id">
                <column name="id"/>
            </id>

            <basic name="active">
                <column name="active"/>
            </basic>

            <embedded name="name">
            </embedded>

            <version name="version">
                <column name="version"/>
            </version>
        </attributes>
    </entity>

    <entity class="net.pkhapps.idispatch.cad.domain.model.resource.Resource" access="FIELD">
        <table name="resource" schema="cad"/>
        <attributes>
            <id name="id">
                <column name="id"/>
            </id>

            <basic name="active">
                <column name="active"/>
            </basic>
            <basic name="designation">
                <column name="designation"/>
            </basic>
            <basic name="stationedAt">
                <column name="station_id"/>
            </basic>
            <basic name="type">
                <column name="resource_type_id"/>
            </basic>



            <version name="version">
                <column name="version"/>
            </version>
        </attributes>
    </entity>
</entity-mappings>